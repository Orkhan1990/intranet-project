{
    "compilerOptions": {
      "module": "ESNext",
      "esModuleInterop": true,
      "target": "ESNext",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": false,
      "outDir": "dist",
      "baseUrl": ".",
      "rootDir": "src",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "typeRoots": ["./node_modules/@types", "./src/@types"],
      "paths": {
        "*": [
          "node_modules/*",
          "src/interfaces/*"
        ]
      },
      "lib": [
        "es2015", "es5", "es6", "dom"
      ]
    },
    "include": [
      "src/**/*"
    ]
  }